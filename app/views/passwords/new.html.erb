<div class="middlePasswordResetContainer">
	<h1>Esqueceu sua senha?</h1>
	<p>Entre com o email da sua conta para resetar a senha.</p>
	<% form_for resource_name, resource, :url => password_path(resource_name) do |f| %>
	
		<%= f.error_messages %>
		
		<div class="bitlyAuthFormBox">
			<%= f.label :email %>
			<div class="authFormFieldContainer">
				<%= f.text_field :email %>
			</div>
			<div>
				<%= f.submit "Enviar", :class => "submitButtonBackground" %>				
			</div>
		</div>
		
	<% end %>
</div>